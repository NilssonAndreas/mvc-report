{% extends "base.html.twig" %}

{% block title %}Show All{% endblock %}

{% block body %}

<div>
<table id="leaderboard">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Alias</th>
            <th>Land</th>
            <th>Score</th>
            <th>info</th>
            <th>Ändra</th>
        </tr>
    </thead>
    <tbody>
        {% for item in leaderboard %}
        <tr>
            <td>{{ item.namn }}</td>
            <td>{{ item.alias }}</td>
            <td>{{ item.land }}</td>
            <td>{{ item.score }}</td>
            <td><a href="show/{{item.id}}"> Se info</a></td>
            <td><a href="update/{{item.id}}"> Ändra</a></td>
        </tr>
        
        {% endfor %}
    </tbody>

</table>

</div>
{% endblock %}
