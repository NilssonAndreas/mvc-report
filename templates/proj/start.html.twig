{% extends "./proj/base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
<h1 class="center">{{ title }}</h1>

<div class="gamecontainer">

    <div class="information">
        {{slots}}
        {% if slots > 0 %}
            
        <p>
            Skriv Något här.<br>
            Visa kort: {{dump(card)}}  <br>
            Poäng?: <br>
        </p>
        {% else %}
            <p>NU ÄR DET FAN SLUT</p>
        {% endif %}
    </div>


    <div class="board">
        <table class="deck-table">
            {{dump(board)}}
            {% for index in board|batch(5, " ") %}
                <tr>
                    {% for key, value in index %}
                        {% if value == " " %}
                        <td><a href="{{loop.parent.loop.index0 * 5 + loop.index}}"></a></td>
                        {% else %}
                            {% for key, value in value %}
                                <td>{{ key }}</td>
                            {% endfor %}
                        
                        {% endif %}
                        
                    {% endfor %}
            
                </tr>
          
            {% endfor %}
        </table>
    </div>

</div>
{% endblock %}
